<%- model_class = UserRole.new.class -%>
<div class="page-header">
  <h1><i class="icon-user"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:role_id) %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.userlogin, user_role_path(:id => user) %></td>
        <td>
	     <% user.roles.each do |role| %>
          <%= link_to role.name, user_role_path(:id => user) %>
         <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

