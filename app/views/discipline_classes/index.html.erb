<%- model_class = DisciplineClass.new.class -%>
<div class="page-header">
  <h1><i class="icon-book"></i> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:school_class_id) %></th>
      <th><%= model_class.human_attribute_name(:matrix_discipline_id) %></th>
      <th><%= model_class.human_attribute_name(:docentes) %></th>
      <th><%= model_class.human_attribute_name(:vancancies) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:ending_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @discipline_classes.each do |discipline_class| %>
      <tr>
        <td><%= link_to discipline_class.id, discipline_class_path(discipline_class) %></td>

        <td><%= discipline_class.matrix_discipline.try(:discipline_name) %></td>
        <td><%= link_to "<i class='icon-user'></i> ".html_safe + discipline_class.class_teachings.count.to_s, discipline_class_class_teachings_path(discipline_class) %></td>
        <td><%= discipline_class.vancancies %></td>
        <td><%=l discipline_class.started_at %></td>
        <td><%=l discipline_class.ending_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_discipline_class_path(discipline_class), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      discipline_class_path(discipline_class),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<center><%= will_paginate @discipline_classes %></center>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_discipline_class_path,
            :class => 'btn btn-primary' %>
