<%= form_for [@dept,@dept_telephone], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
      <h2><i class="icon-sitemap"></i><%= Dept.find(params[:dept_id]).name %></h2><br />
      <%= f.hidden_field :dept_id, :value => params[:dept_id] %>
  </div>
  <div class="control-group">
    <%= f.label :telephone_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :telephone_type_id, TelephoneType.find(:all),:id, :telephone_type, :prompt => 'Selecione' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :area_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :area_code, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :number, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :branch, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :branch, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dept_dept_telephones_path, :class => 'btn' %>
  </div>
<% end %>
