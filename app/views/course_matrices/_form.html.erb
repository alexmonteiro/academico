<%= form_for @matrix, :html => { :class => 'form-horizontal' } do |f| %>

<fieldset class="control-group">
<legend>VigÃªncia<legend>
  <div class="control-group">
    <%= f.label :started_at, :class => 'control-label' %>
    <div class="controls">
      <% @matrix.started_at = @matrix.started_at.try(:strftime, "%d.%m.%Y") %>
      <%= f.text_field :started_at, :class => 'datepicker_class', :style => "width:80px" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ended_at, :class => 'control-label' %>
    <div class="controls">
      <% @matrix.ended_at = @matrix.ended_at.try(:strftime, "%d.%m.%Y") %>
      <%= f.text_field :ended_at, :class => 'datepicker_class', :style => "width:80px", :include_blank => true  %>
    </div>
  </div>
</fieldset>
  <div class="control-group">
    <%= f.label :maxdisciplines, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :maxdisciplines, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :maxseasons, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :maxseasons, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :course_id, Course.find(:all, :order => :name), :id, :name, :prompt => "...Selecione..." %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :matrix_evaluation_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :matrix_evaluation_type_id, MatrixEvaluationType.find(:all), :id, :description, :prompt => "...Selecione..." %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :matrix_status_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :matrix_status_id, MatrixStatus.find(:all), :id, :description, :prompt => "...Selecione..." %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :class_season_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :class_season_type_id, ClassSeasonType.find(:all), :id, :description, :prompt => "...Selecione..." %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_matrices_path, :class => 'btn' %>
  </div>
<% end %>
