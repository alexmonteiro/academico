<%- model_class = RegistrationClass -%>
<div class="page-header">
  <h1><i class="icon-group"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:registration_id) %>:</strong></dt>
  <dd><%= link_to "#{@registration_class.registration.registration_number} - #{@registration_class.registration.student_name}", registration_path(@registration_class.registration)	 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discipline_class_id) %>:</strong></dt>
  <dd><%= link_to "#{@registration_class.discipline_class.id} - #{@registration_class.discipline_class.discipline_name}", discipline_class_path(@registration_class.discipline_class) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registered_at) %>:</strong></dt>
  <dd><%=l @registration_class.registered_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_class_status_id) %>:</strong></dt>
  <dd><%= @registration_class.registration_class_status.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endnote_council_class) %>:</strong></dt>
  <dd><%= @registration_class.endnote_council_class %></dd>
</dl>

<div class="form-actions">
  <%= link_to "<i class='icon-undo'></i> ".html_safe + t('.back', :default => t("helpers.links.back")),
              discipline_class_registration_classes_path, :class => 'btn btn-large pull-left'  %>
  <%= link_to "<i class='icon-edit'></i> ".html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_discipline_class_registration_class_path(@discipline_class), :class => 'btn btn-large pull-left' %>
  <%= link_to "<i class='icon-trash'></i> ".html_safe + t('.destroy', :default => t("helpers.links.destroy")),
              discipline_class_registration_class_path(@registration_class),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))) },
              :class => 'btn btn-danger btn-large pull-right' %>

</div>
