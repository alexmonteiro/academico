 <% containerSpan = "span12" %>

<% fullpath = "#{request.fullpath}"[1..-1].split('/')%>

<!DOCTYPE html>
<html>
<head>
  <title>Acadêmico Rails</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Menu superior -->
	<div class="navbar">
	      <div class="navbar-inner">
	        <div class="container-fluid">
	          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </a>
	          <a class="brand" href=<%= root_path %> >@cadêmico - IFB</a>
	           <%if user_signed_in? %>
		          <div class="btn-group pull-right">
		            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
		              <i class="icon-user"></i> <%= "#{current_user.firstname}" %>
		              <span class="caret"></span>
		            </a>
		            <ul class="dropdown-menu">
		              <li><a href="#">Profile</a></li>
		              <li class="divider"></li>
		              <li><a href="#"> <%= link_to('Sair', destroy_user_session_path) %>  </a></li>
		            </ul>
		          </div>

	          <div class="nav-collapse">
	            <ul class="nav">
					<%= top_menu_by_profile %>
	            </ul>
	          </div><!--/.nav-collapse -->
		      <%end%>
		
	        </div>
	      </div>    
	</div>
	<!-- -->

	    <div class="container-fluid">
		
	      <div class="row-fluid">

            <!-- Area Central -->
        	<div class=<%="#{containerSpan}"%>>
	         
            	<%= render_breadcrumbs %>
				
				<%= bootstrap_flash %>
						
				<!-- Exibição dos erros -->
				<%= render :partial => 'layouts/error_messages' %> 
				<!-- -->	
				
	            <div class="hero-unit">		
	             <%= yield %>
	            </div><!--/span-->
	         </div><!--/row-->


	        </div><!--/span-->
	      </div><!--/row-->
	      
	      <hr>

	      <footer>
	        <p><center>&copy; <%= link_to 'Instituto Federal de Brasília', 'http://www.ifb.edu.br'%> <%= '('+Rails.env+')' if Rails.env != 'production'%></center></p>
	      </footer>

	    </div><!--/.fluid-container-->

</body>
</html>
