<%- model_class = SchoolClass.new.class -%>
<div class="page-header">
  <h1><i class="icon-group"></i> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:identifier) %></th>
      <th><%= model_class.human_attribute_name(:period) %></th>
      <th><%= model_class.human_attribute_name(:matrix_id) %></th>
      <th><%= model_class.human_attribute_name(:class_season_id) %></th>
      <th><%= model_class.human_attribute_name(:shift_type_id) %></th>
      <th><%= model_class.human_attribute_name(:opening_at) %></th>
      <th><%= model_class.human_attribute_name(:closing_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @school_classes.each do |school_class| %>
      <tr>
        <td><%= link_to school_class.id, school_class_path(school_class) %></td>
        <td><%= school_class.identifier %></td>
        <td><%= school_class.period %></td>
        <td><%= school_class.matrix.model_custom_name %></td>
        <td><%= school_class.class_season.model_custom_name %></td>
        <td><%= school_class.shift_type.description %></td>
        <td><%= school_class.opening_at %></td>
        <td><%= school_class.closing_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_school_class_path(school_class), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      school_class_path(school_class),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_school_class_path,
            :class => 'btn btn-primary' %>
