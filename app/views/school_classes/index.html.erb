<h1>Listing school_classes</h1>

<table>
  <tr>
    <th>Identifier</th>
    <th>Period</th>
    <th>Matrix</th>
    <th>Class season</th>
    <th>Shift type</th>
    <th>Opening at</th>
    <th>Closing at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @school_classes.each do |school_class| %>
  <tr>
    <td><%= school_class.identifier %></td>
    <td><%= school_class.period %></td>
    <td><%= school_class.matrix %></td>
    <td><%= school_class.class_season %></td>
    <td><%= school_class.shift_type %></td>
    <td><%= school_class.opening_at %></td>
    <td><%= school_class.closing_at %></td>
    <td><%= link_to 'Show', school_class %></td>
    <td><%= link_to 'Edit', edit_school_class_path(school_class) %></td>
    <td><%= link_to 'Destroy', school_class, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

