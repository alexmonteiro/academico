<%- model_class = AcademicRuleType.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:rule) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @academic_rule_types.each do |academic_rule_type| %>
      <tr>
        <td><%= link_to academic_rule_type.id, academic_rule_type_path(academic_rule_type) %></td>
        <td><%= academic_rule_type.rule %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_academic_rule_type_path(academic_rule_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      academic_rule_type_path(academic_rule_type),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_academic_rule_type_path,
            :class => 'btn btn-primary' %>
