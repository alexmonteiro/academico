<%- model_class = CourseMatrixAcademicRule.new.class -%>
<div class="page-header">
  <h1><i class='icon-th-list'></i> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <h2><%= @matrix.model_id_and_course_name%></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:academic_rule_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @course_matrix_academic_rules.each do |course_matrix_academic_rule| %>
      <tr>
        <td><%= course_matrix_academic_rule.course_matrix_id %></td>
        <td><%= course_matrix_academic_rule.academic_rule_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_course_matrix_academic_rule_path(course_matrix_academic_rule), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      course_matrix_academic_rule_path(course_matrix_academic_rule),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

