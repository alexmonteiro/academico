<%= form_for [@person, @registration], :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :registration_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :registration_at, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_matrix_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.grouped_collection_select :course_matrix_id, Course.order(:name), :course_matrices, :name, :id, :model_custom_name, :prompt => "...Selecione..." %>
    </div>
  </div>
<!-- Retirado essa opção pois a matrícula somente será realizada após a consulta do aluno
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :person_id, :class => 'number_field' %>
    </div>
  </div>
-->
  <div class="control-group">
    <%= f.label :registration_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :registration_number, :class => 'text_field', :disabled => true, :placeholder => "criado pelo sistema" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :registration_status_id, :class => 'control-label' %>
    <div class="controls">
     <%= f.collection_select :registration_status_id, RegistrationStatus.find(:all), :id, :description, :selected => 7 %> <!-- 7 = Matriculado -->
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                registrations_path, :class => 'btn' %>
  </div>
<% end %>