<%= form_for @person_address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :street_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :street_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :city_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :complement, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :complement, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :post_office_box, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_office_box, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :neighborhood, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :neighborhood, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :zip_code, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :provenance_area_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :provenance_area_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :person_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                person_addresses_path, :class => 'btn' %>
  </div>
<% end %>
