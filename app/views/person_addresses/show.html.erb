<%- model_class = @person_address.class -%>
<div class="page-header">
  <h1><i class="icon-home"></i><%=t '.title', :default => @person.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:street_type_id) %>:</strong></dt>
  <dd><%= @person_address.street_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @person_address.city.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street_name) %>:</strong></dt>
  <dd><%= @person_address.street_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complement) %>:</strong></dt>
  <dd><%= @person_address.complement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:post_office_box) %>:</strong></dt>
  <dd><%= @person_address.post_office_box %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighborhood) %>:</strong></dt>
  <dd><%= @person_address.neighborhood %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @person_address.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @person_address.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:provenance_area_id) %>:</strong></dt>
  <dd><%= @person_address.provenance_area.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              person_person_addresses_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_person_address_path(@person), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              person_person_address_path(@person),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
              :class => 'btn btn-danger' %>
</div>