<%- model_class = AcademicRule.new.class -%>
<div class="page-header">
  <h1><i class="icon-th-list"></i> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:education_modality_id) %></th>
      <th><%= model_class.human_attribute_name(:academic_rule_type_id) %></th>
      <th><%= model_class.human_attribute_name(:operator) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:rclass_status_true_id) %></th>
      <th><%= model_class.human_attribute_name(:rclass_status_false_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @academic_rules.each do |academic_rule| %>
      <tr>
        <td><%= link_to academic_rule.id, academic_rule_path(academic_rule) %></td>
        <td><%= academic_rule.education_modality.try(:description) %></td>
        <td><%= academic_rule.academic_rule_type.rule %></td>
        <td><%= academic_rule.operator %></td>
        <td><%= academic_rule.value %></td>
		<td><%= academic_rule.rclass_status_true.try(:description) %></td>
		<td><%= academic_rule.rclass_status_false.try(:description) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_academic_rule_path(academic_rule), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      academic_rule_path(academic_rule),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_academic_rule_path,
            :class => 'btn btn-primary' %>
