<%- model_class = @class_record.class -%>
<div class="page-header">
  <h1><i class="icon-pencil"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:recorded_at) %>:</strong></dt>
  <dd><%= @class_record.recorded_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:record) %>:</strong></dt>
  <dd><%= @class_record.record %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @class_record.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:justification) %>:</strong></dt>
  <dd><%= @class_record.justification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discipline_class_id) %>:</strong></dt>
  <dd><%= @class_record.discipline_class_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @class_record.person_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_time_id) %>:</strong></dt>
  <dd><%= @class_record.class_time_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_record_type_id) %>:</strong></dt>
  <dd><%= @class_record.class_record_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              class_records_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_class_record_path(@class_record), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              class_record_path(@class_record),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
