<script type="text/javascript">
jQuery(function($) {
// when the #region_id field changes
  $("#dept_address_state").change(function() {
    // make a POST call and replace the content
    var state = $('select#dept_address_state :selected').val();
    var nome_view = $('input#nome_view').val();
    if(state == "") state="0";
    jQuery.get('/countries/update_city_select/' + state, {nome_view:nome_view}, function(data){
        $("#addressCities").html(data);
    })
    return false;
  });
})
</script>


    <% if !states.blank? %>
       <%= select_tag 'dept_address_state', options_from_collection_for_select(states, "id", "name") %>

    <% else %>
      <%= select_tag 'dept_address_state', [], :class => 'select_field' %>
    <% end %>


