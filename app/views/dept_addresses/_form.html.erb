<%= form_for [@dept,@dept_address], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
      <h2><i class="icon-sitemap"></i><%= Dept.find(params[:dept_id]).name %></h2><br />
      <%= f.hidden_field :dept_id, :value => params[:dept_id] %>
  </div>
  <div class="control-group">
    <%= f.label :street_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :street_type_id, StreetType.find(:all) , :id, :description, :prompt => "Escolha um tipo" %>
    </div>
  </div>
<div class="control-group">

<!-- País Cidade e Estado -->
  <!--
  Tag Hidden atributos:
  # id = nome_view -> Variavel para o JS application - Não muda
  # value = person_addresses -> nome da view em que se encontra o codigo - Aqui muda de acordo com a view em que se encontra
  -->
  <input type="hidden" id="nome_view" value="dept_addresses">
  <%= f.label :country_id, :class => 'control-label' %>
  <div class="controls" id="addressCountryDept">
    <%= render :partial =>'country' %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :state_id, :class => 'control-label' %>
    <div class="controls"  id="addressStatesDept">
       <%= render :partial => 'states', :locals => {:country_id => (@dept_address.city.state.country.id if !@dept_address.city.blank?)}%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_id, :class => 'control-label' %>
    <div class="controls"  id="addressCitiesDept">
       <%= render :partial => 'cities', :locals => {:state_id => (@dept_address.city.state.id if !@dept_address.city.blank?)} %>
    </div>
  </div>
  <!-- Fim -->

  <div class="control-group">
    <%= f.label :street_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :complement, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :complement, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :post_office_box, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_office_box, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :neighborhood, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :neighborhood, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :zip_code, :class => 'number_field', :id => "zipcode" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :provenance_area_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :provenance_area_id, ProvenanceArea.find(:all) , :id, :description, :prompt => "Selecione" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dept_dept_addresses_path, :class => 'btn' %>
  </div>
<% end %>
