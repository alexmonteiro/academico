<%- model_class = IssuingInstitution.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:acronym) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @issuing_institutions.each do |issuing_institution| %>
      <tr>
        <td><%= link_to issuing_institution.id, issuing_institution_path(issuing_institution) %></td>
        <td><%= issuing_institution.description %></td>
        <td><%= issuing_institution.acronym %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_issuing_institution_path(issuing_institution), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      issuing_institution_path(issuing_institution),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_issuing_institution_path,
            :class => 'btn btn-primary' %>
