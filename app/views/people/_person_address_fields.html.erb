<div class="fields">
    <span class="fields">
    	  <div class="span6">
	  <div class="control-group">
	    <%= f.label :street_type_id, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.collection_select :street_type_id, StreetType.find(:all) , :id, :description, :prompt => "Escolha um Logradouro", :selected => (@person.person_address.street_type.id if !@person.person_address.street_type.blank?) %>
