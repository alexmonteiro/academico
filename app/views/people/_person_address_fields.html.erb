		    <%= render :partial =>'people/person_address_field/country' %>
		  </div>
		</div>
		<div class="control-group">
		  <%= f.label :state_id, :class => 'control-label' %>
		  <div class="controls" id="addressStatesPersonAddress">
		<%= render :partial => 'people/person_address_field/states', :locals => {:country_id => (@person.person_address.try(:city).state.country.id if !@person.person_address.try(:city).blank?)}%>
		  </div>
		</div>
		<div class="control-group">
		  <%= f.label :city_id, :class => 'control-label' %>
		  <div class="controls" id="addressCitiesPersonAddress">
