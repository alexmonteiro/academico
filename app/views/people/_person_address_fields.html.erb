		<%= f.label :city_id, :class => 'control-label' %>
		  <div class="controls" id="addressCitiesPersonAddress">
			    <% options = option_groups_from_collection_for_select(State.where(:country_id => 24, :id => 7).order(:name).all, :cities, :name, :id, :name, (!params[:city_id].blank? ? params[:city_id] : "")) %>
				<%= f.select(:city_id, options, :include_blank => "...Selecione...") %>
		  </div>
		</div>
		<!-- Fim -->
		
		  <div class="control-group">
		    <%= f.label :street_name, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.text_field :street_name, :class => 'text_field', :value =>  (@person.person_address.street_name if !@person.person_address.street_name.blank?)%>
		    </div>
		  </div>
		  <div class="control-group">
		    <%= f.label :complement, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.text_field :complement, :class => 'text_field', :value =>  (@person.person_address.complement if !@person.person_address.complement.blank?) %>
		    </div>
		  </div>
		</div>
		<div class="span6">
		  <div class="control-group">
		    <%= f.label :post_office_box, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.text_field :post_office_box, :class => 'text_field', :value =>  (@person.person_address.post_office_box if !@person.person_address.post_office_box.blank?) %>
		    </div>
		  </div>
		  <div class="control-group">
		    <%= f.label :neighborhood, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.text_field :neighborhood, :class => 'text_field', :value =>  (@person.person_address.neighborhood if !@person.person_address.neighborhood.blank?) %>
		    </div>
		  </div>
		  <div class="control-group">
		    <%= f.label :zip_code, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.number_field :zip_code, :class => 'number_field', :id => "zipcode", :value =>  (@person.person_address.zip_code if !@person.person_address.zip_code.blank?) %>
		    </div>
		  </div>
		  <div class="control-group">
		    <%= f.label :number, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.text_field :number, :class => 'text_field', :value =>  (@person.person_address.number if !@person.person_address.number.blank?) %>
		    </div>
		  </div>
		  <div class="control-group">
		    <%= f.label :provenance_area_id, :class => 'control-label' %>
		    <div class="controls">
		      <%= f.collection_select :provenance_area_id, ProvenanceArea.find(:all) , :id, :description, :prompt => "Escolha uma Zona", :selected => (@person.person_address.provenance_area.id if !@person.person_address.provenance_area.blank?) %>
