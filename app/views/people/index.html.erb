<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t 'people.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(t :name) %></th>
      <th><%= model_class.human_attribute_name(t :birth_date) %></th>
      <th><%= model_class.human_attribute_name(t :email) %></th>
      <th><%= model_class.human_attribute_name(t :isemployee) %></th>
      <th><%= model_class.human_attribute_name(t :isstudent) %></th>
      <th><%=t 'action.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.id, person_path(person) %></td>
        <td><%= person.name %></td>
        <td><%= person.birth_date %></td>
        <td><%= person.email %></td>
        <td><%= person.isemployee %></td>
        <td><%= person.isstudent %></td>
        <td>
          <%= link_to t('action.edit', :default => t("helpers.links.edit")),
                      edit_person_path(person), :class => 'btn btn-mini' %>
          <%= link_to t('action.destroy', :default => t("helpers.links.destroy")),
                      person_path(person),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
 <%= link_to t('action.new', :default => t("helpers.links.new")), new_person_path, :class => 'btn btn-primary' %>
</div>
