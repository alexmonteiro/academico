<script type="text/javascript">
jQuery(function($) {
// when the #region_id field changes
  $("#person_state_id").change(function() {
    // make a POST call and replace the content
    var state = $('select#person_state_id :selected').val();
    if(state == "") state="0";
    jQuery.get('/people/update_city_select/' + state, function(data){
        $("#addressCities").html(data);
    })
    return false;
  });
})
</script>


