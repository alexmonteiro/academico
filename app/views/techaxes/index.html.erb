<%- model_class = Techaxis.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
   <h3><%= link_to @techaxis_type.techaxis_type, techaxis_type_path(@techaxis_type) %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:techaxis) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @techaxes.each do |techaxis| %>
      <tr>
        <td><%= link_to techaxis.id, techaxis_type_techaxis_path(:id => techaxis.id) %></td>
        <td><%= techaxis.techaxis %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_techaxis_type_techaxis_path(:id => techaxis.id), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      techaxis_type_techaxis_path(:id => techaxis.id),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
             new_techaxis_type_techaxis_path,
            :class => 'btn btn-primary' %>
