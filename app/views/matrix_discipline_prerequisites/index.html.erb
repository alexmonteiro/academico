<%- model_class = MatrixDisciplinePrerequisite.new.class -%>
<div class="page-header">
  <h1><i class="icon-book"></i> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  <h2><%= @matrix_discipline.discipline.try(:code) %> - <%= @matrix_discipline.try(:discipline_name) %> - Per√≠odo <%= @matrix_discipline.try(:maxseasons)%></h2>
  <h3>Curso: <%= @matrix_discipline.course_name%></h3>
  <h3>Matriz: <%= @matrix_discipline.try(:matrix_name)%></h3>
</div>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:pre_matrix_discipline_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @matrix_discipline_prerequisites.each do |matrix_discipline_prerequisite| %>
      <tr>
        <td><%= matrix_discipline_prerequisite.discipline_code %> - <%= matrix_discipline_prerequisite.discipline_name %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      course_matrix_matrix_discipline_matrix_discipline_prerequisite_path(:id => matrix_discipline_prerequisite.id),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_course_matrix_matrix_discipline_matrix_discipline_prerequisite_path,
            :class => 'btn btn-primary btn-large' %>

		  <%= link_to "<i class='icon-undo'></i> ".html_safe + t('.back', :default => t("helpers.links.back")),
		              request.referer, :class => 'btn btn-large'  %>