<%= form_for @dept, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :acronym, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :acronym, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :code_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :cnpj, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cnpj, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :started_at, :class => 'control-label' %>
    <div class="controls">
	   <%= f.text_field :started_at, :class => 'datepicker_class', :include_blank => true, :style => "width:80px", :value => @dept.started_at.blank? ? nil : @dept.started_at.strftime("%d/%m/%Y") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :finished_at, :class => 'control-label' %>
    <div class="controls">
	   <%= f.text_field :finished_at, :class => 'datepicker_class', :include_blank => true, :style => "width:80px", :value => @dept.finished_at.blank? ? nil : @dept.finished_at.strftime("%d/%m/%Y") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :site, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :site, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dept_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :dept_type_id, DeptType.find(:all), :id, :dept_type, :prompt => "Tipo de elemento organizacional" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dept_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :dept_id, Dept.find(:all), :id, :name, :prompt => "Setor pai..." %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                depts_path, :class => 'btn' %>
  </div>
<% end %>
