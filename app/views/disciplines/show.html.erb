<%- model_class = @discipline.class -%>
<div class="page-header">
  <h1><i class="icon-book"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class='container'>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @discipline.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @discipline.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @discipline.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals) %>:</strong></dt>
  <dd><%= @discipline.goals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:workload) %>:</strong></dt>
  <dd><%= @discipline.workload %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credits) %>:</strong></dt>
  <dd><%= @discipline.credits %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discipline_type_id) %>:</strong></dt>
  <dd><%= @discipline.discipline_type.description if @discipline.discipline_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @discipline.course.name if @discipline.course_id%></dd>
  <dt><strong><%= model_class.human_attribute_name(:dept_id) %>:</strong></dt>
  <dd><%= @discipline.course.dept.try(:name) %></dd>
</dl>
</div>
<div class="form-actions">
	  <%= link_to  "<i class='icon-undo'></i> ".html_safe + t('.back', :default => t("helpers.links.back")),
	              course_disciplines_path, :class => 'btn btn-large'  %>
	  <%= link_to "<i class='icon-edit'></i> ".html_safe + t('.edit', :default => t("helpers.links.edit")),
	              edit_course_discipline_path(:id => @discipline.id), :class => 'btn btn-large' %>
	  <%= link_to "<i class='icon-trash'></i> ".html_safe + t('.destroy', :default => t("helpers.links.destroy")),
	              course_discipline_path(params[:course_id]),
	              :method => 'delete',
	              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Tem certeza que deseja excluir a disciplina #{@discipline.name}?")),
	              :class => 'btn btn-danger btn-large' %>
</div>


