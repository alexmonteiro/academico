<%- model_class = @discipline.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @discipline.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @discipline.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @discipline.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals) %>:</strong></dt>
  <dd><%= @discipline.goals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:workload) %>:</strong></dt>
  <dd><%= @discipline.workload %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credits) %>:</strong></dt>
  <dd><%= @discipline.credits %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discipline_type_id) %>:</strong></dt>
  <dd><%= @discipline.discipline_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @discipline.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dept_id) %>:</strong></dt>
  <dd><%= @discipline.dept_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              disciplines_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_discipline_path(@discipline), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              discipline_path(@discipline),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
