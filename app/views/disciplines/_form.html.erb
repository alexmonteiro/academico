<%curso = Course.find(params[:course_id])%>
<h2>Curso: <%= curso.name%> | <%= curso.dept.try(:name)%></h2>
<% if @discipline.errors.any? %>
  <div id="error_explanation" class="alert alert-error">
    <h2><%= pluralize(@discipline.errors.count, "error impediu", "errors impediram") %> impediu a gravação:</h2>

    <ul>
    <% @discipline.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for ([@course, @discipline], :html => { :class => 'form-horizontal' }) do |f| %>

<div class="container">
<h2>Dados da disciplina</h2>
<div class="span4">	
   <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
    </div>
   </div>
   
   <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">    
    <%= f.text_area :description, :class => 'text_area' %>
    </div>
   </div>

   <div class="control-group">
    <%= f.label :workload, :class => 'control-label' %>
    <div class="controls">    
    <%= f.number_field :workload, :class => 'number_field' %>
    </div>
   </div>
   
   <div class="control-group">
    <%= f.label :credits, :class => 'control-label' %>
    <div class="controls">    
    <%= f.number_field :credits, :class => 'number_field' %>
    </div>
   </div>

</div>
<div class="span4">	
   <div class="control-group">
	<%= f.label :code, :class => 'control-label' %>
	<div class="controls">    
    <%= f.text_field :code, :class => 'text_field' %>
    </div>
   </div>
    
    <div class="control-group">
    <%= f.label :goals, :class => 'control-label' %>
    <div class="controls">    
    <%= f.text_area :goals, :class => 'text_area' %>
    </div>
    </div>

    <div class="control-group">
    <%= f.label :discipline_type_id, :class => 'control-label' %>
    <div class="controls">    
    <%= f.collection_select :discipline_type_id, DisciplineType.find(:all), :id, :description, :prompt => "...Selecione..." %>
    </div>
    </div>

</div>

</div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_disciplines_path, :class => 'btn' %>
  </div>

<% end %>
