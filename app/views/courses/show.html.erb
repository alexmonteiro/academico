<%- model_class = @course.class -%>
<div class="page-header">
  <h1><i class="icon-book"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="container">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @course.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
  <dd><%= @course.nickname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal) %>:</strong></dt>
  <dd><%= @course.goal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:maxtime) %>:</strong></dt>
  <dd><%= @course.maxtime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mintime) %>:</strong></dt>
  <dd><%= @course.mintime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_at) %>:</strong></dt>
  <dd> <%=l @course.started_at if @course.started_at %> </dd>
  <dt><strong><%= model_class.human_attribute_name(:ended_at) %>:</strong></dt>
  <dd> <%=l @course.ended_at if @course.ended_at%> </dd>
  <dt><strong><%= model_class.human_attribute_name(:dept_id) %>:</strong></dt>
  <dd><%= @course.dept.name if @course.dept_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration_scheme_id) %>:</strong></dt>
  <dd><%= @course.registration_scheme.description if @course.registration_scheme_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_season_type_id) %>:</strong></dt>
  <dd><%= @course.class_season_type.description if @course.class_season_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:learning_modality_id) %>:</strong></dt>
  <dd><%= @course.learning_modality.description if @course.learning_modality_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:knowledge_area_id) %>:</strong></dt>
  <dd><%= @course.knowledge_area.description if @course.knowledge_area_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:techaxes_id) %>:</strong></dt>
  <dd><%= @course.techaxis.techaxis if @course.techaxes_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:education_modality_id) %>:</strong></dt>
  <dd><%= @course.education_modality.description if @course.education_modality_id %></dd>
</dl>
</div>
<div class="form-actions">
  <div class="pagination-centered">
  <%= link_to "<i class='icon-undo'></i> ".html_safe + t('.back', :default => t("helpers.links.back")),
              courses_path, :class => 'btn btn-large  pull-left' %>
  <%= link_to "<i class='icon-edit'></i> ".html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_course_path(@course), :class => 'btn btn-large pull-left' %>
  <%= link_to "<i class='icon-book'></i> ".html_safe + 'Disciplinas',
              course_disciplines_path(@course), :class => 'btn btn-large pull-left' %>
  <%= link_to "<i class='icon-print'></i> ".html_safe + t('.print', :default => t("helpers.links.print")), course_path(@course, :format =>  "pdf"), :class => 'btn btn-large pull-left' %>
  <%= link_to "<i class='icon-trash'></i> ".html_safe + t('.destroy', :default => t("helpers.links.destroy")),
              course_path(@course),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger btn-large pull-right' %>

  </div>
</div>
