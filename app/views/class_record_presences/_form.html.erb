<%= form_for @class_record_presence, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :class_record_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :class_record_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :registration_class_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :registration_class_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_present, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_present, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                class_record_presences_path, :class => 'btn' %>
  </div>
<% end %>
