<%- model_class = RegistrationAdmissionType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:registration_id) %>:</strong></dt>
  <dd><%= @registration_admission_type.registration_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admission_type_id) %>:</strong></dt>
  <dd><%= @registration_admission_type.admission_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              registration_admission_types_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registration_admission_type_path(@registration_admission_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              registration_admission_type_path(@registration_admission_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
