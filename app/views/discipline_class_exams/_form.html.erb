<%= form_for [@discipline_class, @discipline_class_exam], :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :applied_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :applied_at, :class => 'datepicker_class', :style => "width:80px", :value => @discipline_class_exam.applied_at.blank? ? nil : I18n.l(@discipline_class_exam.applied_at) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
       <%= f.number_field :weight, :class => 'number_field', :value => 1.0, :type => "number",  :step => "any", :min => "1.0" %></div>
  </div>
  <div class="control-group">
    <%= f.label :real_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :real_value, :class => 'number_field', :value => 0.0 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :discipline_class_exam_type_id, :class => 'control-label' %>
    <div class="controls">
        <%= f.collection_select :discipline_class_exam_type_id, DisciplineClassExamType.find(:all), :id, :description %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_mandatory, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_mandatory, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>
