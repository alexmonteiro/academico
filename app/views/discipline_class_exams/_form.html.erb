<%= form_for @discipline_class_exam, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :applied_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :applied_at, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weight, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :real_value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :real_value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :discipline_class_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :discipline_class_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :discipline_class_exam_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :discipline_class_exam_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_mandatory, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_mandatory, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                discipline_class_exams_path, :class => 'btn' %>
  </div>
<% end %>
