<%= form_for @course_vacancy, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :course_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :class_season_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :class_season_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shift_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :shift_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number_vacancies, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :number_vacancies, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_vacancies_path, :class => 'btn' %>
  </div>
<% end %>
