<%- model_class = @teaching_equipament.class -%>
<div class="page-header">
  <div style="font-size: 24px;">
    <h1><i class="icon-hdd"></i> <%=t '.title', :default => model_class.model_name.human %></h1>
  </div>
   <h2><i class="icon-sitemap"></i><%= link_to @dept.name, dept_path(@dept) %></h2>
</div>
<div class="container">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= verifica_registro :campo => @teaching_equipament.description, :mensagem => "<<Sem Registro>>" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival_date) %>:</strong></dt>
  <dd><%= verifica_registro :campo => @teaching_equipament.arrival_date, :mensagem => "<<Sem Registro>>" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equipament_type_id) %>:</strong></dt>
  <dd><%= verifica_registro :campo => @teaching_equipament.equipament_type, :atributo => "description" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:situation_teaching_equipament_id) %>:</strong></dt>
  <dd><%= verifica_registro :campo => @teaching_equipament.situation_teaching_equipament, :mensagem => "<<Sem Registro>>", :atributo => "description" %></dd>
</dl>
</div>
<div class="form-actions">
  <div class="pagination-centered">
  <%= link_to "<i class='icon-undo'></i> ".html_safe + t('.back', :default => t("helpers.links.back")),
              dept_teaching_equipaments_path, :class => 'btn btn-large pull-left'  %>
  <%= link_to "<i class='icon-edit'></i> ".html_safe + t('.edit', :default => t("helpers.links.edit")),
              edit_dept_teaching_equipament_path, :class => 'btn btn-large pull-left' %>


  <%= link_to "<i class='icon-trash'></i> ".html_safe + t('.destroy', :default => t("helpers.links.destroy")),
              dept_teaching_equipament_path,
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => t("controller_message.delete_confirm"))),
              :class => 'btn btn-danger btn-large pull-right' %>
  </div>
</div>
