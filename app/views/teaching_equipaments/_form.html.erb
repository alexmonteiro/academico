<%= form_for [@dept, @teaching_equipament], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :arrival_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :arrival_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :equipament_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :equipament_type_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :situation_teaching_equipament_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :situation_teaching_equipament_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dept_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :dept_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dept_teaching_equipaments_path, :class => 'btn' %>
  </div>
<% end %>
