<%= form_for @education_modality, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :education_step_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :education_step_id, EducationStep.find(:all, :order => "description"), :id, :description %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                education_modalities_path, :class => 'btn' %>
  </div>
<% end %>
