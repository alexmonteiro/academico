<%- model_class = @education_modality.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @education_modality.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:education_step_id) %>:</strong></dt>
  <dd><%= @education_modality.education_step.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              education_modalities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_education_modality_path(@education_modality), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              education_modality_path(@education_modality),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
